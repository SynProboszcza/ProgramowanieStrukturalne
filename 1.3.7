#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("Podaj a, b, i c z rownania kwadratowego, podam ci rozwiazania\n");
    int a = 0;
    int b = 0;
    int c = 0;
    printf("\na:");
    scanf("%d", &a);
    printf("\nb:");
    scanf("%d", &b);
    printf("\nc:");
    scanf("%d", &c);

    int delta = b*b-4*a*c;

    if(delta > 0){
        printf("x1 = %f\n", -b-sqrt(delta)/2*a);
        printf("x2 = %f\n", -b+sqrt(delta)/2*a);
    }
    else if(delta == 0){
            float x01 = b*(-1);
            float x02 = 2*a;
            float x03 = x01/x02;
        printf("x0 = %f\n", x03);
    }
    else if(delta < 0){
        printf("Nie ma rozwiazania w zbiorze liczb rzeczywistych");
    }

    return 0;
}
