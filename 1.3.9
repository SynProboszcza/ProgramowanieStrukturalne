#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("Kalkulator. Co chcesz robic? Wpisz odpowiednia cyfre:\n");
    printf("1 - dodawanie;\n");
    printf("2 - odejmowanie;\n");
    printf("3 - mnozenie;\n");
    printf("4 - dzielenie;\n");
    printf("5 - potegowanie pierwszej do drugiej;\n");
    printf("6 - pierwiastkowanie(obu liczb);\n");
    int wybor;
    scanf("%d", &wybor);
    float a = 0;
    float b = 0;
    printf("Podaj pierwsza liczbe:\n");
    scanf("%f", &a);
    printf("Podaj druga liczbe:\n");
    scanf("%f", &b);
    switch(wybor){
    	case 1:
    	{
    		printf("%f + %f = %f",a,b,a+b);
    	}
    	break;
    	case 2:
    	{
    		printf("%f - %f = %f",a,b,a-b);
    	}
    	break;
    	case 3:
    	{
    		printf("%f * %f = %f",a,b,a*b);
    	}
    	break;
    	case 4:
    	{
    		printf("%f / %f = %f",a,b,a/b);
    	}
    	break;
    	case 5:
    	{
    		printf("%f ^ %f = %f",a,b,pow(a,b));
    	}
    	break;
    	case 6:
    	{
    		printf("sqrt(%f) = %f\n",a,sqrt(a));
    		printf("sqrt(%f) = %f",b,sqrt(b));
    	}
    	break;
    }


    return 0;
}
