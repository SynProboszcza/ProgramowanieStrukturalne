#include <stdio.h>
#include <stdlib.h>

int main()
{
    printf("Podaj wielka litere:");
    char litera = 'q';
    scanf("%c", &litera);
    //printf("%c", litera);
    //printf("%c", litera+1);

    for(int i = 0; i <5; i++){
        switch(i){
    case 0:
        printf("    %c\n", litera);
        break;
    case 1:
        printf("   %c%c%c\n", litera,litera+1,litera);
        break;
    case 2:
        printf("  %c%c%c%c%c\n", litera,litera+1,litera+2,litera+1,litera);
        break;
    case 3:
        printf(" %c%c%c%c%c%c%c\n", litera,litera+1,litera+2,litera+3,litera+2,litera+1,litera);
        break;
    case 4:
        printf("%c%c%c%c%c%c%c%c%c\n", litera,litera+1,litera+2,litera+3,litera+4,litera+3,litera+2,litera+1,litera);
        break;
    }


    }
    return 0;
}
///65..90
